@model OrderModel
<div class="container">

    <div> <h1>Order Form</h1></div>
    <hr />
    <div class="mt-4">
        <form method="post">
                <div class="mt-4">
                    <div class="row mt-3">
                            <label class="col-4" asp-for="amount">Amount paid</label>
                            <input class="form-control-sm col-4" asp-for="amount" />
                    </div>
                </div>
            <div class=" row mt-3 ">
                <button class="btn btn-primary col-1 me-2 " type="submit">Submit</button>
                <button class=" btn btn-primary col-1 ms-2" type="reset">Reset</button>
            </div>
        </form>
    </div>
</div>